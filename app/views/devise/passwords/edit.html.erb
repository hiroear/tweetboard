<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card border-light">
      <div class="card-body">
        <h2>パスワード再設定</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <!--<div class="field mt-4 pt-3">
            <%= f.text_field :name, class: "form-control", placeholder: 'ユーザーネーム', autofocus: true %>
          </div>-->

          <div class="form-group mt-4 pt-3">
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: '新しいパスワード（半角英数６文字以上）' %>
          </div>

          <div class="form-group mt-4 pt-1">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: '新しいパスワード（確認）' %>
          </div>

          <div class="form-group mt-4 pt-1">
            <%= f.submit "パスワード変更", class:"btn w-100" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
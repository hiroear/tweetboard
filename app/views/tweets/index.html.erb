              <td><%= いいね %></td>
              <td><%= link_to '編集', edit_tweet_path(tweet) %></td>
              <td><%= link_to '削除', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= tweet.created_at %></td>

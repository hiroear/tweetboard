<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-body">
        <h1>ツイート編集</h1>
        <p class="edit_username mt-5 px-2"><%= current_user&.name %></p>

        <%= form_with model: @tweet do |form| %>
          <div class="form-group">
            <%= form.text_area :content, class: "form-control form-control-lg" %>
          </div>
          <div class="edit_tweet d-flex justify-content-end">
            <%= form.submit '編 集', class: 'btn' %>
          </div>
        <% end %>

        <%= link_to '戻る', tweets_path %>
      </div>
    </div>
  </div>
</div>